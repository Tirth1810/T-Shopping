<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Product_about">

    <ImageView
        android:id="@+id/product_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_baseline_arrow_back_24" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Engage"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/yellow"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="335dp"/>

    <ImageView
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="240dp"
        android:src="@drawable/prod"/>
    <TextView
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginTop="340dp"
        android:text="Engage M1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="370dp"
        android:text="Body"
        android:textColor="@color/yellow"
        android:textSize="20sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/p_desc"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/btn2_bg"
        android:text="Description"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textStyle="bold" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/p_htouse"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="420dp"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:background="@drawable/btn2_bg"
        android:text="How to use"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/p_rev"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="420dp"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:background="@drawable/btn2_bg"
        android:text="Review"/>
    <TextView
        android:textStyle="italic"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="500dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Give way to the fragrance that matches your personality. This body spray for men defines the man of today. Fresh yet Fiery, this is one perfect fragrance, with tantalizing notes, that can take your man game up by notches."/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="620dp"
        android:background="@drawable/btn_bg_4"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:text="250ml"
        android:textColor="@color/yellow"
        android:textSize="15sp"
        android:textStyle="bold" />
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="750dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RS."
        android:textColor="@android:color/black"
        android:textSize="10sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_marginLeft="40dp"
        android:layout_marginTop="750dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="50dp"
        android:layout_marginTop="730dp"
        android:padding="10dp"
        android:paddingTop="10dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_bg3"
        android:drawableStart="@drawable/ic_cart"
        android:layout_marginLeft="330dp"
     />
</RelativeLayout>